{% if section.settings.enable_section %}
<style>
/*
    Loading spinner
*/
.eg-loading-spinner {
    width: 24px;
    height: 24px;
    border-radius: 50%;
}

.eg-loading-spinner {
    display: block !important;
    position: relative;
    margin: 0 auto;
    border-top: 3px solid rgba(255, 255, 255, 0.2);
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    border-right: 3px solid rgba(255, 255, 255, 0.2);
    border-left: 3px solid #ffffff;
    transform: translateZ(0);
    animation: egLoadingSpinner 1s infinite linear;
}

@keyframes egLoadingSpinner {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}


/*
    Typing spinner
*/
.eg-typing-spinner {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    animation: egTypingSpinner 1s linear infinite alternate;
}

@keyframes egTypingSpinner {
    0% {
        background-color: rgba(0,0,0, 1);
        box-shadow: 12px 0px 0px 0px rgba(0,0,0,0.2), 24px 0px 0px 0px rgba(0,0,0,0.2);
    }
    25% {
        background-color: rgba(0,0,0, 0.4);
        box-shadow: 12px 0px 0px 0px rgba(0,0,0,2), 24px 0px 0px 0px rgba(0,0,0,0.2);
    }
    75% {
        background-color: rgba(0,0,0, 0.4);
        box-shadow: 12px 0px 0px 0px rgba(0,0,0,0.2), 24px 0px 0px 0px rgba(0,0,0,2);
    }
}


/*
    Wrapper
*/
eg-whatsapp-wrapper {
    position: fixed;
    bottom: 14px;
    z-index: 9;
}

.eg-whatsapp-button-left {
    left: 14px;
}

.eg-whatsapp-button-left #eg-whatsapp-button-text {
    left: 54px;
}

.eg-whatsapp-button-right {
    right: 14px;
}

.eg-whatsapp-button-right #eg-whatsapp-button-text {
    right: 54px;
}


/*
    Button styling
*/
#eg-whatsapp-button {
    background: {{ section.settings.primary_color }};
    border: transparent;
    border-radius: 50rem;
    width: 48px;
    height: 48px;
    transition: all .2s ease-out;
    border: 1px solid white;
    cursor: pointer;
}

#eg-whatsapp-button:hover,
#eg-whatsapp-button:focus {
    opacity: .9;
    box-shadow: 0 0 1rem rgba(0, 0, 0, .25);
}

#eg-whatsapp-button:focus {
}

#eg-whatsapp-button::after {
    content: "";
    position: absolute;
    top: 1px;
    right: 1px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: red;
    opacity: 0;
    transform: scale(0);
    animation: showEgWhatsAppDot 2s ease-out both;
}

@keyframes showEgWhatsAppDot {
    90% { opacity: 0; transform: scale(0); }
    100% { opacity: 1; transform: scale(1) }
}

#eg-whatsapp-button-text {
    border-radius: 50rem;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: bold;
    position: absolute;
    top: 50%;
    white-space: nowrap;
    transform: translateY(-50%);
    background: white;
    box-shadow: 0 0 1rem rgba(0, 0, 0, .125);
}


/*
    Dialog styling
*/
#eg-whatsapp-dialog {
    visibility: hidden;
    position: absolute;
    bottom: 56px;
    right: 0;
    background: white;
    border-radius: 1.25rem;
    width: 360px;
    height: 480px;
    box-shadow: 0 0 1rem rgba(0, 0, 0, .125);
    display: flex;
    flex-direction: column;
    max-width: calc(100vw - 28px);
    max-height: 60vh;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    transition: all .3s ease-out;
}

.eg-whatsapp-dialog-visible #eg-whatsapp-dialog {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
}

#eg-whatsapp-dialog-header {
    background: {{ section.settings.secondary_color }};
    padding: 1rem 1rem;
    border-radius: 1rem 1rem 0 0;
    color: white;
    line-height: normal;
    display: flex;
    align-items: center;
}

#eg-whatsapp-dialog-close {
    background: transparent;
    border: none;
    box-shadow: none;
    color: white;
    position: absolute;
    top: 0;
    {% if shop.locale contains 'ar' %}
    left: 0;
    {% else %}
    right: 0;
    {% endif %}
    opacity: .6;
    transition: all .2s ease-out;
    width: 40px;
    height: 40px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

#eg-whatsapp-dialog-close:hover,
#eg-whatsapp-dialog-close:focus {
    opacity: 1;
}

#eg-whatsapp-dialog-header-img-wrapper {
    {% if shop.locale contains 'ar' %}
    margin-left: 1rem;
    {% else %}
    margin-right: 1rem;
    {% endif %}
    position: relative;
}

#eg-whatsapp-dialog-header-img-wrapper::after {
    content: "";
    content: "";
    position: absolute;
    bottom: 4px;
    right: 2px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: {{ section.settings.primary_color }};
    border: 2px solid {{ section.settings.secondary_color }};
}

#eg-whatsapp-dialog-header-img {
    border-radius: 50%;
}

#eg-whatsapp-dialog-label {
    margin: 0;
    color: white;
    font-size: 18px;
}

#eg-whatsapp-dialog-subtitle {
    font-size: .85em;
    margin: 0;
    opacity: .8;
}

#eg-whatsapp-dialog-body {
    background-color: {{ section.settings.dialog_bg_color }};
    {% comment %}
        background-image: url({{ 'whatsapp-bg.png' | asset_img_url: 'master' }});
    {% endcomment %}
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    overflow: auto;
    flex: 1;
    padding: 16px;
}

#eg-whatsapp-dialog-msg {
    display: inline-block;
    background-color: white;
    padding: 8px 12px;
    {% if shop.locale contains 'ar' %}
    border-radius: 1rem 0 1rem 1rem;
    margin: 0 4px 12px 64px;
    {% else %}
    border-radius: 0 1rem 1rem 1rem;
    margin: 0 64px 12px 4px;
    {% endif %}
    line-height: normal;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .125);
    position: relative;
    color: #121212;
    min-width: 60px;
}

#eg-whatsapp-dialog-msg::after {
    content: "";
    border-top: 0px solid transparent;
    top: 0;
    position: absolute;
    {% if shop.locale contains 'ar' %}
    border-bottom: 12px solid transparent;
    border-left: 8px solid white;
    right: -7px;
    {% else %}
    border-bottom: 12px solid transparent;
    border-right: 8px solid white;
    left: -8px;
    {% endif %}
}

#eg-whatsapp-dialog-msg-typing {
    margin: 2px;
}

#eg-whatsapp-dialog-msg-text p {
    margin: 0;
}

#eg-whatsapp-dialog-footer {
    display: flex;
    {% if shop.locale contains 'ar' %}
    padding: 12px 16px 12px 6px;
    {% else %}
    padding: 12px 6px 12px 16px;
    {% endif %}
    background: linear-gradient(#fff, #f0f2f5);
}

#eg-whatsapp-dialog-user-input {
    width: 100%;
    border-radius: 6px;
    border: 1px solid #d1d7e0;
    background-color: white;
    box-shadow: none;
    padding: 8px 12px;
    outline: none;
    font-size: 15px;
    transition: all .2s ease-out;
}

#eg-whatsapp-dialog-user-input:hover {

}

#eg-whatsapp-dialog-user-input:focus {
    border-color: #94a2b8;
}

#eg-whatsapp-dialog-btn {
    {% if shop.locale contains 'ar' %}
    margin-right: 6px;
    {% else %}
    margin-left: 6px;
    {% endif %}
    background: transparent;
    color: #121212;
    border-color: transparent;
    display: flex;
    align-items: center;
    opacity: .5;
    transition: all .2s ease-out;
}

{% if shop.locale contains 'ar' %}
#eg-whatsapp-dialog-btn svg {
    transform: scaleX(-1)
}
{% endif %}

#eg-whatsapp-dialog-btn:hover,
#eg-whatsapp-dialog-btn:focus {
    opacity: 1;
}

#eg-whatsapp-dialog-btn .eg-loading-spinner {
    border-top-color: rgba(0, 0, 0, .2);
    border-bottom-color: rgba(0, 0, 0, .2);
    border-right-color: rgba(0, 0, 0, .2);
    border-left-color: rgba(0, 0, 0, 1);
}
